<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
	
		<!-- Address -->
    	<parameter key="asf_contact.form.type.address.class">ASF\ContactBundle\Form\Type\AddressType</parameter>
    	<parameter key="asf_contact.form.type.identity_address.class">ASF\ContactBundle\Form\Type\IdentityAddressType</parameter>
    	
    	<!-- Province -->
    	<parameter key="asf_contact.form.type.province.class">ASF\ContactBundle\Form\Type\ProvinceType</parameter>
    	
    	<!-- Region -->
    	<parameter key="asf_contact.form.type.region.class">ASF\ContactBundle\Form\Type\RegionType</parameter>
    	
    	<!-- Geoloc -->
    	<parameter key="asf_contact.form.type.geoloc.class">ASF\ContactBundle\Form\Type\GeolocType</parameter>
    	
    </parameters>

    <services>
        
        <!-- Address -->
        <service id="asf_contact.form.type.address" class="%asf_contact.form.type.address.class%">
        	<argument type="service" id="asf_contact.address.manager" />
			<tag name="form.type" alias="address_type" />
		</service>
		
		<service id="asf_contact.form.type.identity_address" class="%asf_contact.form.type.identity_address.class%">
        	<argument type="service" id="asf_contact.identity_address.manager" />
        	<argument type="service" id="asf_contact.identity.manager" />
			<tag name="form.type" alias="identity_address_type" />
		</service>

		<!-- Province -->
        <service id="asf_contact.form.type.province" class="%asf_contact.form.type.province.class%">
        	<argument type="service" id="asf_contact.province.manager" />
			<tag name="form.type" alias="province_type" />
		</service>
		
		<!-- Region -->
        <service id="asf_contact.form.type.region" class="%asf_contact.form.type.region.class%">
        	<argument type="service" id="asf_contact.region.manager" />
			<tag name="form.type" alias="region_type" />
		</service>
		
		<!-- Geoloc -->
        <service id="asf_contact.form.type.geoloc" class="%asf_contact.form.type.geoloc.class%">
        	<argument type="service" id="asf_contact.province.manager" />
        	<argument type="service" id="asf_contact.region.manager" />
        	<argument type="service" id="request_stack" />
			<tag name="form.type" alias="geoloc_type" />
		</service>
    </services>
    
</container>
