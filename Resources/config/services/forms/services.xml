<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
		
		<parameter key="asf_contact.form.factory.class">ASF\ContactBundle\Form\Factory\FormFactory</parameter>
		
		<!-- Form Types -->
		<parameter key="asf_contact.form.type.identity.class">ASF\ContactBundle\Form\Type\IdentityType</parameter>
		<parameter key="asf_contact.form.type.person.class">ASF\ContactBundle\Form\Type\PersonType</parameter>
		<parameter key="asf_contact.form.type.organization.class">ASF\ContactBundle\Form\Type\OrganizationType</parameter>
		<parameter key="asf_contact.form.type.identity_organization.class">ASF\ContactBundle\Form\Type\IdentityOrganizationType</parameter>
		<parameter key="asf_contact.form.type.search_identity.class">ASF\ContactBundle\Form\Type\SearchIdentityType</parameter>
		
		<!-- Subscribers and Listeners -->
		<parameter key="asf_contact.form.identity.subscriber.class">ASF\ContactBundle\Event\IdentityFormSubscriber</parameter>
		
    </parameters>

    <services>
    
    	<!-- Identity Forms -->
    	<service id="asf_product.form.factory.identity" class="%asf_contact.form.factory.class%">
            <argument type="service" id="form.factory" />
            <argument>%asf_contact.identity.form.name%</argument>
            <argument>%asf_contact.identity.form.type%</argument>
        </service>
        
        <service id="asf_contact.form.type.identity" class="%asf_contact.form.type.identity.class%">
        	<argument type="service" id="asf_contact.identity.manager" />
			<tag name="form.type" alias="identity_type" />
		</service>
		
		<!-- Person Forms -->
    	<service id="asf_product.form.factory.person" class="%asf_contact.form.factory.class%">
            <argument type="service" id="form.factory" />
            <argument>%asf_contact.person.form.name%</argument>
            <argument>%asf_contact.person.form.type%</argument>
        </service>
        
		<service id="asf_contact.form.type.person" class="%asf_contact.form.type.person.class%">
        	<argument type="service" id="asf_contact.person.manager" />
        	<argument type="service" id="asf_contact.form.identity.subscriber" />
			<tag name="form.type" alias="person_type" />
		</service>
		
		<!-- Organization Forms -->
    	<service id="asf_product.form.factory.organization" class="%asf_contact.form.factory.class%">
            <argument type="service" id="form.factory" />
            <argument>%asf_contact.organization.form.name%</argument>
            <argument>%asf_contact.organization.form.type%</argument>
        </service>
        
		<service id="asf_contact.form.type.organization" class="%asf_contact.form.type.organization.class%">
        	<argument type="service" id="asf_contact.organization.manager" />
        	<argument type="service" id="asf_contact.form.identity.subscriber" />
			<tag name="form.type" alias="organization_type" />
		</service>
		
		<!-- IdentityOrganization Forms -->
    	<service id="asf_product.form.factory.identity_organization" class="%asf_contact.form.factory.class%">
            <argument type="service" id="form.factory" />
            <argument>%asf_contact.identity_organization.form.name%</argument>
            <argument>%asf_contact.identity_organization.form.type%</argument>
        </service>
        
		<service id="asf_contact.form.type.identity_organization" class="%asf_contact.form.type.identity_organization.class%">
        	<argument type="service" id="asf_contact.identity_organization.manager" />
        	<argument type="service" id="asf_contact.identity.manager" />
			<tag name="form.type" alias="identity_organization_type" />
		</service>
		
		<!-- Search Forms -->
		<service id="asf_contact.form.type.search_identity" class="%asf_contact.form.type.search_identity.class%">
        	<argument type="service" id="asf_contact.identity.manager" />
            <tag name="form.type" alias="search_identity" />
        </service>
        
        <!-- Subscribers and Listeners -->
        <service id="asf_contact.form.identity.subscriber" class="%asf_contact.form.identity.subscriber.class%">
        	<argument>%asf_contact.enable_address%</argument>
        	<argument>%asf_contact.enable_contact_device%</argument>
        	<tag name="kernel.event_subscriber" />
        </service>
        
    </services>
    
</container>
