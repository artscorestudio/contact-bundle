<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
	
    	<!-- Address Manager -->
		<parameter key="asf_contact.address.entity.class">ASF\ContactBundle\Entity\Address</parameter>
		
		<!-- Identity Address Manager -->
		<parameter key="asf_contact.identity_address.entity.class">ASF\ContactBundle\Entity\IdentityAddress</parameter>
		
		<!-- Province Manager -->
		<parameter key="asf_contact.province.entity.class">ASF\ContactBundle\Entity\Province</parameter>
		
		<!-- Region Manager -->
		<parameter key="asf_contact.region.entity.class">ASF\ContactBundle\Entity\Region</parameter>

    	<!-- Address Form -->
    	<parameter key="asf_contact.form.type.address.class">ASF\ContactBundle\Form\Type\AddressType</parameter>
    	
    	<!-- Identity Address Form -->
    	<parameter key="asf_contact.form.type.identity_address.class">ASF\ContactBundle\Form\Type\IdentityAddressType</parameter>
    	
    	<!-- Province Form -->
    	<parameter key="asf_contact.form.type.province.class">ASF\ContactBundle\Form\Type\ProvinceType</parameter>
    	
    	<!-- Region Form -->
    	<parameter key="asf_contact.form.type.region.class">ASF\ContactBundle\Form\Type\RegionType</parameter>
		
		<!-- Geoloc Form -->
    	<parameter key="asf_contact.form.type.geoloc.class">ASF\ContactBundle\Form\Type\GeolocType</parameter>
    	
    </parameters>

    <services>
        
        <!-- Address Entity Manager -->
        <service id="asf_contact.address.manager" class="%asf_contact.entity.manager.class%">
            <tag name="asf_core.manager" entity="%asf_contact.address.entity.class%" />
        </service>
        
        <!-- Identity Address Manager -->
		<service id="asf_contact.identity_address.manager" class="%asf_contact.entity.manager.class%">
            <tag name="asf_core.manager" entity="%asf_contact.identity_address.entity.class%" />
        </service>
        
        <!-- Province Manager -->
		<service id="asf_contact.province.manager" class="%asf_contact.entity.manager.class%">
            <tag name="asf_core.manager" entity="%asf_contact.province.entity.class%" />
        </service>
		
		<!-- Region Manager -->
		<service id="asf_contact.region.manager" class="%asf_contact.entity.manager.class%">
            <tag name="asf_core.manager" entity="%asf_contact.region.entity.class%" />
        </service>

		<!-- Address Form -->
    	<service id="asf_contact.form.factory.address" class="%asf_contact.form.factory.class%">
            <argument type="service" id="form.factory" />
            <argument>%asf_contact.address.form.name%</argument>
            <argument>%asf_contact.address.form.type%</argument>
        </service>
        
        <service id="asf_contact.form.type.address" class="%asf_contact.form.type.address.class%">
        	<argument type="service" id="asf_contact.address.manager" />
			<tag name="form.type" alias="address_type" />
		</service>
		
		<!-- Identity Address Form -->
    	<service id="asf_contact.form.factory.identity_address" class="%asf_contact.form.factory.class%">
            <argument type="service" id="form.factory" />
            <argument>%asf_contact.identity_address.form.name%</argument>
            <argument>%asf_contact.identity_address.form.type%</argument>
        </service>
        
		<service id="asf_contact.form.type.identity_address" class="%asf_contact.form.type.identity_address.class%">
        	<argument type="service" id="asf_contact.identity_address.manager" />
        	<argument type="service" id="asf_contact.identity.manager" />
			<tag name="form.type" alias="identity_address_type" />
		</service>

		<!-- Province Form -->
		<service id="asf_contact.form.factory.province" class="%asf_contact.form.factory.class%">
            <argument type="service" id="form.factory" />
            <argument>%asf_contact.province.form.name%</argument>
            <argument>%asf_contact.province.form.type%</argument>
        </service>
        
        <service id="asf_contact.form.type.province" class="%asf_contact.form.type.province.class%">
        	<argument type="service" id="asf_contact.province.manager" />
			<tag name="form.type" alias="province_type" />
		</service>
		
		<!-- Region Form -->
		<service id="asf_contact.form.factory.region" class="%asf_contact.form.factory.class%">
            <argument type="service" id="form.factory" />
            <argument>%asf_contact.region.form.name%</argument>
            <argument>%asf_contact.region.form.type%</argument>
        </service>
        
        <service id="asf_contact.form.type.region" class="%asf_contact.form.type.region.class%">
        	<argument type="service" id="asf_contact.region.manager" />
			<tag name="form.type" alias="region_type" />
		</service>
		
		<!-- Region Form -->
		<service id="asf_contact.form.factory.geoloc" class="%asf_contact.form.factory.class%">
            <argument type="service" id="form.factory" />
            <argument>%asf_contact.geoloc.form.name%</argument>
            <argument>%asf_contact.geoloc.form.type%</argument>
        </service>
        
        <service id="asf_contact.form.type.geoloc" class="%asf_contact.form.type.geoloc.class%">
        	<argument type="service" id="asf_contact.province.manager" />
        	<argument type="service" id="asf_contact.region.manager" />
        	<argument type="service" id="request_stack" />
			<tag name="form.type" alias="region_type" />
		</service>
        
    </services>
    
</container>
