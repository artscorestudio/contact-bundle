<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
    	
    	<!-- Generic Entity Manager -->
    	<parameter key="asf_contact.entity.manager.class">ASF\ContactBundle\Entity\Manager\ASFContactEntityManager</parameter>
    	
    	<!-- Identity Manager -->
		<parameter key="asf_contact.identity.entity.class">ASF\ContactBundle\Entity\Identity</parameter>
		
		<!-- Organization Manager -->
		<parameter key="asf_contact.organization.entity.class">ASF\ContactBundle\Entity\Organization</parameter>
		
		<!-- Person Manager -->
		<parameter key="asf_contact.person.entity.class">ASF\ContactBundle\Entity\Person</parameter>
		
		<!-- Identity Organization Manager -->
		<parameter key="asf_contact.identity_organization.entity.class">ASF\ContactBundle\Entity\IdentityOrganization</parameter>
    	
    </parameters>

    <services>
        
         <!-- Identity Entity Manager -->
        <service id="asf_contact.identity.manager" class="%asf_contact.entity.manager.class%">
            <tag name="asf_core.manager" entity="%asf_contact.identity.entity.class%" />
        </service>
        
        <!-- Organization Entity Manager -->
        <service id="asf_contact.organization.manager" class="%asf_contact.entity.manager.class%">
            <tag name="asf_core.manager" entity="%asf_contact.organization.entity.class%" />
        </service>
        
        <!-- Person Entity Manager -->
        <service id="asf_contact.person.manager" class="%asf_contact.entity.manager.class%">
            <tag name="asf_core.manager" entity="%asf_contact.person.entity.class%" />
        </service>
        
        <!-- Identity Organization Entity Manager -->
        <service id="asf_contact.identity_organization.manager" class="%asf_contact.entity.manager.class%">
            <tag name="asf_core.manager" entity="%asf_contact.identity_organization.entity.class%" />
        </service>
        
    </services>
    
</container>
