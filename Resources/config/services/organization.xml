<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>

		<!-- Organization Manager -->
		<parameter key="asf_contact.organization.entity.class">ASF\ContactBundle\Entity\Organization</parameter>
		
		<!-- Identity Organization Manager -->
		<parameter key="asf_contact.identity_organization.entity.class">ASF\ContactBundle\Entity\IdentityOrganization</parameter>
    	
    	<!-- Forms -->
    	<parameter key="asf_contact.form.type.organization.class">ASF\ContactBundle\Form\Type\OrganizationType</parameter>
		<parameter key="asf_contact.form.type.identity_organization.class">ASF\ContactBundle\Form\Type\IdentityOrganizationType</parameter>
    	
    </parameters>

    <services>

        <!-- Organization Entity Manager -->
        <service id="asf_contact.organization.manager" class="%asf_contact.default.manager.class%">
            <tag name="asf_core.manager" entity="%asf_contact.organization.entity.class%" />
        </service>
        
        <!-- Identity Organization Entity Manager -->
        <service id="asf_contact.identity_organization.manager" class="%asf_contact.default.manager.class%">
            <tag name="asf_core.manager" entity="%asf_contact.identity_organization.entity.class%" />
        </service>
        
        <!-- Organization Form -->
    	<service id="asf_contact.form.factory.organization" class="%asf_contact.form.factory.class%">
            <argument type="service" id="form.factory" />
            <argument>%asf_contact.organization.form.name%</argument>
            <argument>%asf_contact.organization.form.type%</argument>
        </service>
        
		<service id="asf_contact.form.type.organization" class="%asf_contact.form.type.organization.class%">
        	<argument type="service" id="asf_contact.organization.manager" />
        	<argument type="service" id="asf_contact.form.identity.subscriber" />
			<tag name="form.type" alias="organization_type" />
		</service>
		
		<!-- IdentityOrganization Form -->
    	<service id="asf_contact.form.factory.identity_organization" class="%asf_contact.form.factory.class%">
            <argument type="service" id="form.factory" />
            <argument>%asf_contact.identity_organization.form.name%</argument>
            <argument>%asf_contact.identity_organization.form.type%</argument>
        </service>
        
		<service id="asf_contact.form.type.identity_organization" class="%asf_contact.form.type.identity_organization.class%">
        	<argument type="service" id="asf_contact.identity_organization.manager" />
        	<argument type="service" id="asf_contact.identity.manager" />
			<tag name="form.type" alias="identity_organization_type" />
		</service>
        
    </services>
    
</container>
