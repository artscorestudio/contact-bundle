<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>

		<!-- Person Manager -->
		<parameter key="asf_contact.person.entity.class">ASF\ContactBundle\Entity\Person</parameter>

		<!-- Form -->
		<parameter key="asf_contact.form.type.person.class">ASF\ContactBundle\Form\Type\PersonType</parameter>
		
    </parameters>

    <services>

        <!-- Person Entity Manager -->
        <service id="asf_contact.person.manager" class="%asf_contact.default.manager.class%">
            <tag name="asf_core.manager" entity="%asf_contact.person.entity.class%" />
        </service>
        
        <!-- Form -->
    	<service id="asf_contact.form.factory.person" class="%asf_contact.form.factory.class%">
            <argument type="service" id="form.factory" />
            <argument>%asf_contact.person.form.name%</argument>
            <argument>%asf_contact.person.form.type%</argument>
        </service>
        
		<service id="asf_contact.form.type.person" class="%asf_contact.form.type.person.class%">
        	<argument type="service" id="asf_contact.person.manager" />
        	<argument type="service" id="asf_contact.form.identity.subscriber" />
			<tag name="form.type" alias="person_type" />
		</service>
        
    </services>
    
</container>
