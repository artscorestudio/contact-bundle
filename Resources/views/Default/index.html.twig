{% extends "ASFContactBundle::layout.html.twig" %}

{% trans_default_domain 'asf_contact' %}

{% block asf_contact_content %}

	{% block asf_contact_heading %}
	<div class="jumbotron">
		<h1>{% block heading_title %}{{ 'Contact Manager'|trans }}{% endblock %}</h1>
		<p class="lead">{% block heading_lead %}{{ 'Welcome in the contact manager section of your Symfony Application.'|trans }}{% endblock %}</p>
	</div>
	{% endblock %}

	<div class="row marketing">
		<div class="col-lg-6">
			<h4>{{ 'Manage your contacts'|trans }}</h4>
			<p>{{ 'contacts_text'|trans({'%url%': path('asf_contact_identity_list')})|raw }}</p>
		</div>

		<div class="col-lg-6">
			<h4>{{ 'Manage addresses (optional)'|trans }}</h4>
			<p>{{ 'addresses_text'|trans({'%url%': path('asf_contact_doc_homepage')})|raw }}</p>
			
			<h4>{{ 'Manage contact devices (optional)'|trans }}</h4>
			<p>{{ 'contact_devices_text'|trans({'%url%': path('asf_contact_doc_homepage')})|raw }}</p>
		</div>
	</div>
	
{% endblock %}